@model IEnumerable<SearchResultCustomerDTO.CustomerDTO>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Name)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.Address)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id=item.Id}) |
                    @Html.ActionLink("Ver", "Details", new { id=item.Id} ) |
                    @Html.ActionLink("Eliminar", "Delet", new { id=item.Id}) |
                </td>
            </tr>
        }
    </tbody>
</table>

      
 